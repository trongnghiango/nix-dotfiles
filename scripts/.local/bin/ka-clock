#!/bin/sh

hour=$(date '+%I')

case "$hour" in
    "00"|"12") icon="ğŸ•›" ;;
    "01") icon="ğŸ•" ;;
    "02") icon="ğŸ•‘" ;;
    "03") icon="ğŸ•’" ;;
    "04") icon="ğŸ•“" ;;
    "05") icon="ğŸ•”" ;;
    "06") icon="ğŸ••" ;;
    "07") icon="ğŸ•–" ;;
    "08") icon="ğŸ•—" ;;
    "09") icon="ğŸ•˜" ;;
    "10") icon="ğŸ•™" ;;
    "11") icon="ğŸ•š" ;;
esac

case $BLOCK_BUTTON in
    1) notify-send "Calendar" "$(cal | sed "s/\<$(date +'%e' | tr -d ' ')\>/<b><span color='red'>&<\/span><\/b>/")" ;;
    2) setsid -f "$TERMINAL" -e calcurse ;;
    3) notify-send "ğŸ“… Time" "Left: Month view\nMiddle: Calcurse" ;;
    6) setsid -f "$TERMINAL" -e "$EDITOR" "$0" ;;
esac

echo "$icon$(date '+%I:%M%P')"
