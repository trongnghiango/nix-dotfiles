#!/bin/sh

# --- Default Apps ---
export EDITOR="nvim"
export VISUAL="nvim"
export TERMINAL="st"
export BROWSER="brave"     # Hoặc "librewolf" tùy bạn
export READER="zathura"
export FILE="lf"

# --- Path Configuration (Quan trọng cho Hybrid) ---
# Thêm đường dẫn cá nhân vào trước để ưu tiên script của bạn
# Dùng "$HOME" thay vì "~" để an toàn hơn trong script
export PATH="$HOME/.local/bin:$HOME/.local/bin/base:$HOME/.local/bin/user:$PATH"

# --- XDG Base Directory (Chuẩn hóa) ---
export XDG_CONFIG_HOME="$HOME/.config"
export XDG_CACHE_HOME="$HOME/.cache"
export XDG_DATA_HOME="$HOME/.local/share"
export XDG_STATE_HOME="$HOME/.local/state"

# --- Clean Home (Dọn rác các app không tuân thủ XDG) ---
export ZDOTDIR="$XDG_CONFIG_HOME/zsh"
export LESSHISTFILE="-"
export WGETRC="$XDG_CONFIG_HOME/wget/wgetrc"
export GNUPGHOME="$XDG_DATA_HOME/gnupg"
export CARGO_HOME="$XDG_DATA_HOME/cargo"
export GOPATH="$HOME/go"
export GOMODCACHE="$XDG_CACHE_HOME/go/mod"
export FNM_DIR="$XDG_DATA_HOME/fnm"

# --- Fix Java/GUI Apps trên Tiling WM ---
export _JAVA_AWT_WM_NONREPARENTING=1
export QT_QPA_PLATFORMTHEME="gtk2"  # Ép Qt dùng theme GTK
